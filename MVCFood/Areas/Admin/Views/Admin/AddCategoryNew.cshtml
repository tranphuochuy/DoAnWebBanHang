@model MVCFood.Areas.Admin.AdminViewModels

@{
    ViewBag.Title = "AddCategoryNew";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>AddCategoryNew</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategory",null,new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Category Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.AllTypeProduct) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
           @item.Name
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.Id }, new {@class="btn btn-info" }) 
            <a href="@Url.Action("DeleteCategory",new { id = item.Id})" onclick="return confirm('Bạn có chắc muốn xóa loại này?');" class="btn btn-danger btn-sm">Xóa</a>
        </td>
    </tr>
}

</table>
