@model MVCFood.ViewModels.ShoppingCart.ShoppingCartViewModel

@{
    ViewBag.Title = "Payment";
}
<div class="container">
    @using (Html.BeginForm("FinishPayment", "ShoppingCart"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cập nhật thông tin đặt hàng</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
